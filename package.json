{
  "name": "local-web-brain",
  "version": "1.0.0",
  "description": "Offline cognitive extension that turns browsing history into semantic memory",
  "type": "module",
  "scripts": {
    "dev": "vite build --watch --mode development",
    "build": "tsc && vite build && vite build --config vite.content.config.ts",
    "preview": "vite preview",
    "lint": "eslint . --ext .ts,.svelte",
    "format": "prettier --write \"src/**/*.{ts,svelte,json}\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "web-ext": "web-ext run --source-dir ./dist --start-url about:debugging#/runtime/this-firefox"
  },
  "dependencies": {
    "dexie": "^4.0.1"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^3.0.1",
    "@tsconfig/svelte": "^5.0.2",
    "@types/chrome": "^0.0.258",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-plugin-svelte": "^2.35.1",
    "postcss": "^8.4.33",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "svelte": "^4.2.8",
    "svelte-check": "^3.6.3",
    "svelte-preprocess": "^5.1.4",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vitest": "^1.1.3",
    "web-ext": "^7.9.0"
  }
}
